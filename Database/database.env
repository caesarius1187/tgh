# Configuración de base de datos para TGH Pulseras
# Copia este archivo como .env en la raíz del proyecto

# Configuración de MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=tgh_pulseras

# URL de conexión completa (opcional)
DATABASE_URL=mysql://root:tu_password_aqui@localhost:3306/tgh_pulseras

# Configuración de pool de conexiones
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Configuración de SSL (para producción)
DB_SSL=false

# Configuración de charset
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
